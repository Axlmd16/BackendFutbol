# ===============================================================
# ARCHIVO DE EJEMPLO - Copia a .env y configura tus valores
# ===============================================================

# ================= BASE DE DATOS =================
# PostgreSQL es requerido (ver README para instrucciones de instalación)
DB_HOST=localhost
DB_PORT=5432
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_NAME=futbol_db

# ================= APLICACIÓN =================
APP_NAME=Kallpa UNL API
APP_VERSION=1.0.0
APP_PORT=8000
APP_HOST=0.0.0.0
# En producción, cambiar a False
DEBUG=True

# ================= SEGURIDAD (JWT) =================
# IMPORTANTE: Cambiar este secreto en producción
# Debe ser una cadena larga y aleatoria (mínimo 32 caracteres)
JWT_SECRET=cambiar_este_secreto_en_produccion_abc123xyz789
JWT_ALGORITHM=HS256
# Token de acceso: 1 hora (en segundos)
TOKEN_EXPIRES=3600
# Refresh token: 7 días (en segundos)
REFRESH_TOKEN_EXPIRES=604800

# ================= CORS =================
# Lista de orígenes permitidos en formato JSON
# En producción, especificar solo dominios permitidos
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ================= MICROSERVICIO EXTERNO =================
# Microservicio de usuarios institucional
PERSON_MS_BASE_URL=http://localhost:8096
PERSON_MS_ADMIN_EMAIL=admin@admin.com
PERSON_MS_ADMIN_PASSWORD=12345678

# ================= EMAIL (SMTP) =================
# Para funcionalidad de recuperación de contraseña
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=tu_correo@gmail.com
# Usar App Password de Google, no la contraseña normal
SMTP_PASSWORD=tu_app_password_aqui
SMTP_FROM=tu_correo@gmail.com
SMTP_SSL=True

# URL del frontend para links en correos
FRONTEND_URL=http://localhost:5173

# Dominios de email institucional permitidos
# INSTITUTIONAL_EMAIL_DOMAINS=["@unl.edu.ec"]
